<%- layout('./layouts/boilerplate.ejs') %>
<header class="row"><h1 class="text-center">Add a new campground:</h1></header>
<main>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" class="validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Title:</label>
        <input
          class="form-control"
          id="title"
          type="text"
          name="campground[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location:</label>
        <input
          class="form-control"
          id="location"
          type="text"
          name="campground[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL:</label>
        <input
          class="form-control"
          id="image"
          type="text"
          name="campground[image]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price:</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            class="form-control"
            id="price"
            type="text"
            name="campground[price]"
            aria-describedby="price-label"
            placeholder="0.00"
            required
          />
        </div>
      </div>
      <button class="btn btn-success mb-3">Add</button>
    </form>

    <footer>
      <a class="btn btn-secondary" href="/campgrounds">Cancel</a>
    </footer>
  </div>
</main>

<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
    "use strict";

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll(".validated-form");

    // Loop over them and prevent submission
    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
